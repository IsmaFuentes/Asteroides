<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/main_title"
            android:textSize="34sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/start_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/StartButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_title"
            android:layout_marginTop="32dp" android:layout_marginStart="120dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/AboutButton"/>
    <Button
            android:text="@string/config_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/ConfigButton"
            app:layout_constraintTop_toBottomOf="@+id/StartButton"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="@+id/StartButton" app:layout_constraintEnd_toEndOf="@+id/StartButton"/>
    <Button
            android:text="@string/about_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/AboutButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="120dp"
            app:layout_constraintTop_toBottomOf="@+id/main_title" android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/StartButton" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/exit_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/QuitButton"
            app:layout_constraintTop_toBottomOf="@+id/AboutButton"
            android:layout_marginTop="28dp" app:layout_constraintEnd_toEndOf="@+id/AboutButton"
            app:layout_constraintStart_toStartOf="@+id/AboutButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>